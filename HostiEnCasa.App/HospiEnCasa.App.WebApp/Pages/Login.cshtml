@page
@model HospiEnCasa.App.WebApp.LoginModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login de usuario";
    ViewData["script"] = "login.js";
}
<div class="container">
    <div class="row">
        
        <div class="col-md-3 col-12">

        </div>
        <div class="col-md-6 col-12 bg-white border border-secondary rounded-25">            
            <h1>Login de usuario</h1>
            <form id="form-registro">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="nombre">Usuario</label>
                    <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Digite su usuario" minlength="4" maxlength="20">
                </div>
                <div class="form-group">
                    <label for="nombre">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Digite su contraseña" minlength="3" maxlength="50">
                </div>                              
                <button type="button" id="btnLogin" class="btn btn-primary">Ingresar</button>
                <button type="reset" class="btn btn-default">¿Olvido su contraseña?</button>
            </form>
            <br>
            <br>
        </div>
        <div class="col-md-3 col-12">

        </div>
    </div>
</div>
